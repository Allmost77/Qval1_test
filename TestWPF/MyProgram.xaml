<Window x:Class="TestWPF.MyProgram"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TestWPF"
        mc:Ignorable="d"
        Title="MyProgram" Height="450" Width="800"
        Icon="/Images/Icon.JPG"
        >
    <Grid>
        <Label x:Name="UserName" Content="" HorizontalAlignment="Left" Margin="497,10,0,0" VerticalAlignment="Top" Width="293" Height="28"/>
        <TextBox x:Name="SearchTextBox"
         Margin="22,58,0,0"
      
         TextChanged="SearchTextBox_TextChanged" Height="48" VerticalAlignment="Top" HorizontalAlignment="Left" Width="273"/>

        <ListView x:Name="ProductsList" ItemsSource="{Binding Products}"
          BorderThickness="0"
          ScrollViewer.HorizontalScrollBarVisibility="Disabled" Margin="0,149,0,0">

            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <Setter Property="Padding" Value="0"/>
                    <Setter Property="Margin" Value="0,0,0,10"/>
                    <Setter Property="BorderThickness" Value="0"/>
                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                </Style>
            </ListView.ItemContainerStyle>

            <ListView.ItemTemplate>
                <DataTemplate>

                    <Border BorderBrush="Black" BorderThickness="2" Padding="8">
                        <Border.Style>
                            <Style TargetType="Border">
                                <Setter Property="Background" Value="White"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding OutOfStock}" Value="True">
                                        <Setter Property="Background" Value="LightSkyBlue"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding BigDiscount}" Value="True">
                                        <Setter Property="Background" Value="#2E8B57"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="160"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="160"/>
                            </Grid.ColumnDefinitions>

                            <!-- Левая часть: фото -->
                            <Border Grid.Column="0"
                            BorderBrush="Black"
                            BorderThickness="2"
                            Margin="0,0,10,0"
                            Padding="6">
                                <Image Source="{Binding ImageOfPlaceholder}"
                                Stretch="UniformToFill"/>
                            </Border>

                            <Border Grid.Column="1"
                             BorderBrush="Black"
                             BorderThickness="2"
                             Margin="0,0,10,0"
                             Padding="8">
                                <!-- Центр: информация -->
                                <StackPanel Grid.Column="1" Margin="0,0,10,0" >
                                    <!-- Заголовок: Категория | Наименование -->
                                    <TextBlock FontSize="16" FontWeight="Bold" Margin="0,0,0,6">
                                    <Run Text="{Binding Category}"/>
                                    <Run Text=" | "/>
                                    <Run Text="{Binding Name}"/>
                                    </TextBlock>

                                    <TextBlock Margin="0,0,0,2">
                                <Run Text="Описание товара: "/>
                                <Run Text="{Binding Description}"/>
                                    </TextBlock>

                                    <TextBlock Margin="0,0,0,2">
                                <Run Text="Производитель: "/>
                                <Run Text="{Binding Manufacturer}"/>
                                    </TextBlock>

                                    <TextBlock Margin="0,0,0,2">
                                <Run Text="Поставщик: "/>
                                <Run Text="{Binding Supplier}"/>
                                    </TextBlock>

                                    <TextBlock Margin="0,0,0,2">
                                <Run Text="Цена: "/>
                                <Run Text="{Binding Price}" Foreground="Red">
                                        <Run.Style>
                                            <Style TargetType="Run">
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding HasDiscount}" Value="True">
                                                        <Setter Property="TextDecorations" Value="Strikethrough"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Run.Style>
                                </Run>
                                 <Run Text=" "/>
                                 <Run Text="{Binding FinalPrice, Mode=OneWay}">
                                    <Run.Style>
                                        <Style TargetType="Run">
                                            <Setter Property="Foreground" Value="Transparent"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding HasDiscount}" Value="True">
                                                    <Setter Property="Foreground" Value="Black"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Run.Style>                                    
                                 </Run>
                                    </TextBlock>

                                    <TextBlock Margin="0,0,0,2">
                                <Run Text="Единица измерения: "/>
                                <Run Text="{Binding Unit}"/>
                                    </TextBlock>

                                    <TextBlock Margin="0,0,0,2">
                                <Run Text="Количество на складе: "/>
                                <Run Text="{Binding Quantity}"/>
                                    </TextBlock>
                                </StackPanel>
                            </Border>
                            <!-- Правая часть: скидка -->
                            <Border Grid.Column="2"
                            BorderBrush="Black"
                            BorderThickness="2"
                            Padding="10">
                                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                    <TextBlock Text="Действующая" HorizontalAlignment="Center"/>
                                    <TextBlock Text="скидка" HorizontalAlignment="Center" Margin="0,0,0,8"/>
                                    <TextBlock Text="{Binding Discount, StringFormat={}{0}%}"
                                       FontSize="22"
                                       FontWeight="Bold"
                                       HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Border>
                        </Grid>
                    </Border>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <Button Content="Назад" HorizontalAlignment="Left" Margin="22,23,0,0" VerticalAlignment="Top" Click="Button_Click"/>
        <ComboBox x:Name="supplierCombo" HorizontalAlignment="Left" Margin="22,106,0,0" VerticalAlignment="Top" Width="251" SelectionChanged="supplierCombo_SelectionChanged"/>
        <Button Content="Удалить товар" Click="Delete_Button" HorizontalAlignment="Left" Margin="462,72,0,0" VerticalAlignment="Top"/>
        <Button Content="Добавить товар" HorizontalAlignment="Left" Margin="341,72,0,0" VerticalAlignment="Top" Width="94" Click="Add_card"/>
        <Button Content="Изменить" Click="Edit_card" HorizontalAlignment="Left" Margin="580,72,0,0" VerticalAlignment="Top" Width="93"/>



    </Grid>
</Window>
